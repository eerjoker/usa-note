<?xml version="1.0" encoding="utf-8"?>
 <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PaymentMethodFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonContinue2"
        android:layout_width="356dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#42BF65"
        android:text="Continuar"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TransferenciaTextView"
        android:layout_width="278dp"
        android:layout_height="72dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/rounde_corner_blue"
        android:gravity="center"
        android:text="Transferencia"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="146dp"
        android:layout_height="29dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="164dp"
        android:text="Metodos de pago"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mercadoPagoTextView"
        android:layout_width="278dp"
        android:layout_height="72dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/rounde_corner_blue"
        android:gravity="center"
        android:text="Mercado Pago"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/EfectivoTextView"
        android:layout_width="278dp"
        android:layout_height="72dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/rounde_corner_blue"
        android:gravity="center"
        android:text="Efectivo"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="68dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/mercado_libre_logo"
        app:layout_constraintBottom_toBottomOf="@+id/mercadoPagoTextView"
        app:layout_constraintStart_toStartOf="@+id/mercadoPagoTextView"
        app:layout_constraintTop_toTopOf="@+id/mercadoPagoTextView" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="76dp"
        android:layout_height="51dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/money_logo"
        app:layout_constraintBottom_toBottomOf="@+id/EfectivoTextView"
        app:layout_constraintStart_toStartOf="@+id/EfectivoTextView"
        app:layout_constraintTop_toTopOf="@+id/EfectivoTextView" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="67dp"
        android:layout_height="62dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/white_circle_checkout"
        android:gravity="center"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="67dp"
        android:layout_height="62dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/circle_checkout"
        android:gravity="center"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/textView32"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="67dp"
        android:layout_height="62dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/white_circle_checkout"
        android:gravity="center"
        android:text="3"
        app:layout_constraintStart_toEndOf="@+id/textView33"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="76dp"
        android:layout_height="39dp"
        android:layout_marginTop="68dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/textView33"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView32"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="#95AFF1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="72dp"
        android:layout_height="37dp"
        android:layout_marginTop="68dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/textView34"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView33"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="#95AFF1" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView46"
        android:layout_width="118dp"
        android:layout_height="14dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:text="Metodo de envio"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView32" />

    <TextView
        android:id="@+id/textView47"
        android:layout_width="118dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Metodo de pago"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/textView46"
        app:layout_constraintTop_toBottomOf="@+id/textView33" />

   <TextView
       android:id="@+id/textView48"
       android:layout_width="88dp"
       android:layout_height="19dp"
       android:layout_marginStart="40dp"
       android:layout_marginTop="4dp"
       android:text="Confirmar"
       android:textSize="12sp"
       app:layout_constraintStart_toEndOf="@+id/textView47"
       app:layout_constraintTop_toBottomOf="@+id/textView34" />

</androidx.constraintlayout.widget.ConstraintLayout>