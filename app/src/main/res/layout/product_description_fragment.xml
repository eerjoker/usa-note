<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".fragments.ProductDescriptionFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="316dp"
            android:layout_height="188dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="50dp"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_image"
            android:layout_alignParentTop="true"
            android:layout_marginTop="240dp"
            android:text="Product Name"
            android:layout_marginLeft="2dp"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_title"
            android:layout_marginTop="7dp"
            android:text="Description"
            android:layout_marginLeft="2dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_desc"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="2dp"
            android:text="price"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/cantidadtxt"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_price"
            android:layout_marginTop="40dp"
            android:text="Cantidad:"
            android:layout_marginLeft="2dp"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner_cantidad"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_title"
            android:layout_marginStart="8dp"
            android:layout_marginTop="113dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/cantidadtxt" />

        <Button
            android:id="@+id/add_cart"
            android:layout_width="314dp"
            android:layout_height="58dp"
            android:layout_below="@+id/item_price"
            android:layout_marginTop="86dp"
            android:backgroundTint="#2DDC53"
            android:layout_centerHorizontal="true"
            android:text="Agregar al carrito" />

        <Button
            android:id="@+id/comprar"
            android:layout_width="314dp"
            android:layout_height="58dp"
            android:layout_below="@+id/item_price"
            android:layout_marginTop="149dp"
            android:backgroundTint="#6699CC"
            android:layout_centerHorizontal="true"
            android:text="Continuar al carrito " />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>